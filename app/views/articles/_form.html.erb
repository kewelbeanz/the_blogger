<%= form_for(@article, html: {multipart: true}) do |f| %>


  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
  </p>

  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>

  <%= f.label :tag_list %>

  <%= f.text_field :tag_list %>

  <% if @article.image.exists? %>
      <%= image_tag @article.image.url %>

  <% end %>

 <%= f.label :image, "Attach an Image" %>

  <%= f.file_field :image %>

  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>